{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/test/fixtures/**"]
}
